{
  "name": "fndj",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Thomas Butler",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@fndj/*"
    ],
    "nohoist": [
      "**/@types/*/**"
    ]
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "reinstall": "yarn install --force",
    "renderer:build": "yarn workspace @fndj/main compile",
    "renderer:serve": "yarn workspace @fndj/main serve",
    "webpack:build": "yarn workspace @fndj/webpack build",
    "webpack:watch": "yarn workspace @fndj/webpack watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,json,md,html,yml,yaml,md}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.9",
    "typescript": "^4.1.3",
    "yarn": "^1.22.10"
  }
}
