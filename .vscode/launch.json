{
    "version": "0.2.0",
    "configurations": [
        {
            // start msedge --remote-debugging-port=9222
            "type": "vscode-edge-devtools.debug",
            "request": "attach",
            "name": "Attach to Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "vscode-edge-devtools.debug",
            "preLaunchTask": "serve-renderer",
            "request": "launch",
            "name": "Launch Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack://*": "${webRoot}/packages/*"
            },
            "pathMapping": {
                "/": "${workspaceFolder}"
            }
        },

        {
            "name": "Launch - @fndj/ui",
            "preLaunchTask": "serve-renderer",
            "type": "edge",
            // "type": "vscode-edge-devtools.debug",
            "version": "beta",
            // "runtimeExecutable": "beta",
            "request": "launch",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}",
            "smartStep": true,
            // "port": 9222,
            // "webRoot": "${workspaceRoot}",
            // "timeout": 150000,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack://*": "${webRoot}/packages/*",
            }
        },
        // {
        //     "name": "Attach - @fndj/ui",
        //     "preLaunchTask": "serve-renderer",
        //     // "type": "pwa-msedge",
        //     "type": "edge",
