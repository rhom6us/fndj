{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Compound",
            "preLaunchTask": "browser:start",
            "configurations": [
                ".NET Core Launch (local web)",
                "Attach to Edge"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ],
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "pwa-msedge",
            "urlFilter": "*localhost*",
            // "webRoot": "${workspaceFolder}",
            "webRoot": "${workspaceFolder}/packages/@fndj",
            "smartStep": true,
            // "sourceMapPathOverrides": {
            //     "webpack://*": "${webRoot}/packages/*"
            // },
            // "pathMapping": {
            //     "/": "${workspaceFolder}"
            // }
        },
        
        {
            "type": "vscode-edge-devtools.debug",
            "request": "launch",
            "name": "Launch",
            "vscode-edge-devtools.browserFlavor": "Canary",
            "port":9222,
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}/packages/@fndj",
            "sourceMaps": true,
            "userDataDir": false,
            "useHttps": true,
            // "sourceMapPathOverrides": {
            //     "webpack://*": "${webRoot}/packages/*"
            // },
        //         "webpack://*": "${webRoot}/packages/*",
        //     //     "webpack:///./*": "${workspaceRoot}/packages/@fndj/ui/*",
        //     //     "webpack:///../*": "${workspaceRoot}/packages/@fndj/*"
        //     }
            // "pathMapping": {
            //     "/": "${workspaceFolder}"
            // }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "request": "launch",
            "name": "xxLaunch Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "vscode-edge-devtools.debug",
            "request": "attach",
            "name": "11Attach to Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": ".NET Core Launch (local web)",
            "type": "coreclr",
            "request": "launch",
            // "preLaunchTask": "build",
            "program": "${workspaceFolder}/packages/@fndj/YouTubeProxy/YouTubeProxy/bin/Debug/net5.0/YouTubeProxy.dll",
            "args": [],
            "cwd": "${workspaceFolder}/packages/@fndj/YouTubeProxy/YouTubeProxy/bin/Debug/net5.0/",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
            //     "uriFormat": "%s/tracks",
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": ".net",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "order": 1
            }
        },

        {
            // start msedge --remote-debugging-port=9222
            // "type": "vscode-edge-devtools.debug",
            "type": "pwa-msedge",
            "version": "dev",
            "request": "attach",
            "name": "qq",
            "preLaunchTask": "browser:start",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}",
            "port": 9222,
            "sourceMaps": true
            // "sourceMapPathOverrides": {
            //     "webpack://*": "${webRoot}/packages/*"
            // },
            // "pathMapping": {
            //     "/": "${workspaceFolder}"
            // }
        },


        // {
