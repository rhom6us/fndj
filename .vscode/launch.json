        //     "sourceMapPathOverrides": {
        //         "webpack://*": "${webRoot}/packages/*",
        //     //     "webpack:///./*": "${workspaceRoot}/packages/@fndj/ui/*",
        //     //     "webpack:///../*": "${workspaceRoot}/packages/@fndj/*"
        //     }
        // }
    ]
}
