{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Compound",
            "configurations": [
                ".NET Core Launch (local web)",
                "Launch - @fndj/ui"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": ".NET Core Launch (local web)",
            "type": "coreclr",
            "request": "launch",
            // "preLaunchTask": "build",
            "program": "${workspaceFolder}/packages/YouTubeProxy/YouTubeProxy/bin/Debug/net5.0/YouTubeProxy.dll",
            "args": [],
            "cwd": "${workspaceFolder}/packages/YouTubeProxy/YouTubeProxy/bin/Debug/net5.0/",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
            //     "uriFormat": "%s/tracks",
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "console": "integratedTerminal"
        },

        {
            // start msedge --remote-debugging-port=9222
            "type": "vscode-edge-devtools.debug",
            "request": "attach",
            "name": "Attach to Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "vscode-edge-devtools.debug",
            "preLaunchTask": "serve-renderer",
            "request": "launch",
            "name": "Launch Microsoft Edge and open the Edge DevTools",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack://*": "${webRoot}/packages/*"
            },
            "pathMapping": {
                "/": "${workspaceFolder}"
            }
        },

        {
            "name": "Launch - @fndj/ui",
            "preLaunchTask": "serve-renderer",
            "type": "edge",
            // "type": "vscode-edge-devtools.debug",
            "version": "beta",
            // "runtimeExecutable": "beta",
            "request": "launch",
            "url": "http://localhost:9080",
            "webRoot": "${workspaceFolder}",
            "smartStep": true,
            // "port": 9222,
            // "webRoot": "${workspaceRoot}",
            // "timeout": 150000,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack://*": "${webRoot}/packages/*",
            }
        },
        // {
        //     "name": "Attach - @fndj/ui",
        //     "preLaunchTask": "serve-renderer",
        //     // "type": "pwa-msedge",
        //     "type": "edge",
        //     // "version": "beta",
        //     "request": "attach",
        //     "port": 9222,
        //     "webRoot": "${workspaceRoot}",
        //     "url": "http://localhost:9080",
        //     "sourceMaps": true,
        //     "sourceMapPathOverrides": {
        //         "webpack://*": "${webRoot}/packages/*",
        //     //     "webpack:///./*": "${workspaceRoot}/packages/@fndj/ui/*",
        //     //     "webpack:///../*": "${workspaceRoot}/packages/@fndj/*"
        //     }
        // }
    ]
}
