{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "browser:start",
            "type": "npm",
            "script": "start",
            "path": "packages/@fndj/browser/",
            "dependsOn": "webpack:build",
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen",
                "reevaluateOnRerun": true
            },
            "isBackground": true,
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$ts-webpack",
                "$ts-webpack-watch",
                "$ts-checker-webpack",
                "$ts-checker-webpack-watch",
                "$ts-checker-eslint-webpack",
                "$ts-checker-eslint-webpack-watch",
                "$tslint-webpack",
                "$tslint-webpack-watch"
            ],
            "detail": "fnserve webApp development",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "serve"
            }
        },
        {
            "label": "browser:build",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "type": "npm",
            "script": "build",
            "path": "packages/@fndj/browser/",
            "dependsOn": "webpack:build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$ts-webpack",
                "$ts-webpack-watch",
                "$ts-checker-webpack",
                "$ts-checker-webpack-watch",
                "$ts-checker-eslint-webpack",
                "$ts-checker-eslint-webpack-watch",
                "$tslint-webpack",
                "$tslint-webpack-watch"
            ],
            "detail": "fnbuild webApp development",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "build"
            }
        },
        {
            "label": "webpack:build",
            "type": "npm",
            "script": "build",
            "path": "packages/@fndj/webpack/",
            "group": "build",
            "problemMatcher": [],
            "detail": "tsc",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "serve"
            }
        },
        {
            "label": "build-youtubeproxy",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/packages/@fndj/YoutubeProxy/YoutubeProxy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "publish-youtubeproxy",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/packages/@fndj/YoutubeProxy/YoutubeProxy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch-youtubeproxy",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/packages/@fndj/YoutubeProxy/YoutubeProxy.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-youtubeproxy",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/packages/@fndj/YoutubeProxy/YoutubeProxy.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
