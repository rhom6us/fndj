{
  "search.exclude": {
    "**/.yarn": false,
    "**/.pnp.*": false
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "source.fixAll.eslint": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.tsbuildinfo": false,
    "**/*.csproj.user": true,
    "**/bin/": true,
    "**/obj/": true,
    "**/Properties/Resources.resx": true,
    "yarn.lock": true,
    "**/yarn-error.log": true,
    "**/*.d.ts.map": false,
    "**/desktop.ini": true,
    "pnpm-lock.yaml": true,
    "**/.pnpm-debug.log": true,
    "packages/YouTubeProxy": false,
    "packages/@types": false,
    "packages/@fndj/webpack": false,
    "packages/@fndj/webpack/lib": true,
    "**/node_modules": true,
    "dist": true,
    "**/.tmp.driveupload": true
  },
  // The package manager you use to install node modules.
  "prettier.packageManager": "pnpm",
  // The package manager you use to install node modules.
  "tslint.packageManager": "pnpm",
  // The package manager you use to install node modules.
  "eslint.packageManager": "pnpm",
  "editor.formatOnSaveMode": "modifications",
  "editor.formatOnType": true,
  "typescript.format.semicolons": "insert",
  "eslint.format.enable": true,
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "npm.packageManager": "pnpm",
  "files.autoSaveDelay": 5000,
  "files.autoSave": "afterDelay",
  "vscode-edge-devtools.defaultUrl": "http://localhost:9080/",
  "explorerExclude.backup": null,
  "scm.alwaysShowActions": true,
  "notebook.consolidatedRunButton": true,
  "eslint.codeAction.disableRuleComment": {
    "location": "sameLine"
  },
  "githubIssues.createIssueTriggers": [
    "TODO",
    "todo",
    "BUG",
    "FIXME",
    "ISSUE",
    "HACK",
    "DRAGON",
    "DRAGONS"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode"

}
