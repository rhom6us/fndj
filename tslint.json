{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-react-hooks"],
  "jsRules": {},

  "rules": {
    "object-literal-sort-keys": false,
    "interface-name": false,
    "curly": false,
    "no-shadowed-variable": false,
    "react-hooks-nesting": {
      "severity": "off", // "error", "warning", "default" or "off"
      "options": {
        "detect-hooks-from-non-react-namespace": true
      }
    }
  },
  "rulesDirectory": []
}
